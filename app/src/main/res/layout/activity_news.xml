<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/news_Layout1"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@color/sfondiBase"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/testoNero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Titolo"
        android:textSize="30sp"
        android:id="@+id/news_titolo"
        />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08/02/2017"
        android:id="@+id/news_Data"
        android:layout_below="@id/news_titolo"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sottotitolo"
        android:layout_below="@id/news_titolo"
        android:layout_toStartOf="@id/news_Data"
        android:id="@+id/news_Sottotitolo"/>

    <TextView
        android:textColor="@color/testoNero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abstracted"
        android:layout_below="@+id/news_Sottotitolo"
        android:id="@+id/news_Abstract"/>
    <Button
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leggi"
        android:layout_below="@id/news_Abstract"
        android:layout_alignParentRight="true"
        android:id="@+id/news_btn"/>
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/news_Layout2"
        android:padding="5dp"
        android:background="@color/sfondiBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/news_Layout1"
        android:layout_alignParentEnd="true">
        <TextView
            android:textColor="@color/testoNero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Titolo"
            android:textSize="30sp"
            android:id="@+id/news_titolo"
            />
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/02/2017"
            android:id="@+id/news_Data"
            android:layout_below="@id/news_titolo"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sottotitolo"
            android:layout_below="@id/news_titolo"
            android:layout_toStartOf="@id/news_Data"
            android:id="@+id/news_Sottotitolo"/>

        <TextView
            android:textColor="@color/testoNero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abstracted"
            android:layout_below="@+id/news_Sottotitolo"
            android:id="@+id/news_Abstract"/>
        <Button
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leggi"
            android:layout_below="@id/news_Abstract"
            android:layout_alignParentRight="true"
            android:id="@+id/news_btn"/>
    </RelativeLayout>




</RelativeLayout>